{
    "name": "aerni/snipcart",
    "description": "A Snipcart addon for Statamic",
    "keywords": [
        "statamic",
        "snipcart"
    ],
    "homepage": "https://github.com/aerni/statamic-snipcart",
    "license": "proprietary",
    "authors": [
        {
            "name": "Michael Aerni",
            "email": "hello@michaelaerni.ch",
            "homepage": "https://www.michaelaerni.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "aerni/snipcart-api": "dev-master",
        "aerni/snipcart-webhooks": "^1.0",
        "jordanbrauer/unit-converter": "^0.8.4",
        "moneyphp/money": "^3.3",
        "statamic/cms": "^3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/collision": "^5.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Aerni\\Snipcart\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aerni\\Snipcart\\Tests\\": "tests"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "statamic": {
            "name": "Snipcart",
            "description": "A Snipcart addon for Statamic"
        },
        "laravel": {
            "providers": [
                "Aerni\\Snipcart\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
